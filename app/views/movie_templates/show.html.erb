<h1> Movie #<%= @the_movie.id%> details </h1>

<a href = "/movies"> Go back </a>

<hr>

<dl>
  <dt>Title</dt>
  <dd> <%= @the_movie.title %> </dd>

  <dt>Year</dt>
  <dd> <%= @the_movie.year %> </dd>

  <dt>Duration</dt>
  <dd> <%= @the_movie.duration %> </dd>

  <dt>Description</dt>
  <dd> <%= @the_movie.description %> </dd>

  <dt>Image</dt>
  <dd> <img src="<%= @the_movie.image %>"></img> </dd>

  <dt>Director</dt>
  <% movie_dir = @dir_table.where({ :id => @the_movie.director_id}).at(0) %>
  <dd> <%= movie_dir.name %> </dd>

  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@the_movie.created_at) %></dd>

  <dt>Updated at</dt>
  <dd><%= time_ago_in_words(@the_movie.updated_at) %></dd>
</dl>

<hr>
