<h1> Actor #<%= @the_actor.id%> details </h1>

<a href = "/actors"> Go back </a>

<hr>

<dl>
  <dt>Name</dt>
  <dd> <%= @the_actor.name %> </dd>

  <dt>Dob</dt>
  <dd> <%= @the_actor.dob %> </dd>

  <dt>Bio</dt>
  <dd> <%= @the_actor.bio %> </dd>

  <dt>Image</dt>
  <dd> <img src="<%= @the_actor.image %>"></img> </dd>

  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@the_actor.created_at) %></dd>

  <dt>Updated at</dt>
  <dd><%= time_ago_in_words(@the_actor.updated_at) %></dd>
</dl>

<hr>

<h1> Filmography </h1>

<table border = "1">

<tr>
  <th>Title</th>
  <th>Year</th>
  <th>Director</th>
  <th>Character name</th>
  <th></th>
</tr>

<% @actor_chars.each do |item| %>
<% actor_mov = @movie_table.where({ :id => item.movie_id }).at(0) %>
<% dir_of_movie = Director.where({ :id => actor_mov.director_id }).at(0) %>
<tr>
  <td><%= actor_mov.title%></td>
  <td><%= actor_mov.year%></td>
  <td><%= dir_of_movie.name%></td>
  <td><%= item.name%></td>
  <td><a href = "/movies/<%= actor_mov.id%>">Show details</a></td>
</tr>
<% end %>

</table>
